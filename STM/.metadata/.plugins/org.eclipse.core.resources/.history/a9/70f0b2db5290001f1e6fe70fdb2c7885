{
  /* USER CODE BEGIN Error_Handler_Debug */
  /* User can add his own implementation to report the HAL error return state */
  __disable_irq();
  while (1)
  {
  }
  /* USER CODE END Error_Handler_Debug */
}
#include "stm32f4xx_hal.h"

// Variables for ADC conversion
ADC_HandleTypeDef hadc1;
uint32_t adc_value;
float cp_voltage;

void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_ADC1_Init(void);

int main(void)
{
    // Initialize the HAL Library
    HAL_Init();

    // Configure the system clock
    SystemClock_Config();

    // Initialize GPIO and ADC
    MX_GPIO_Init();
    MX_ADC1_Init();

    while (1)
    {
        // Start ADC conversion
        HAL_ADC_Start(&hadc1);

        // Poll for conversion completion
        if (HAL_ADC_PollForConversion(&hadc1, HAL_MAX_DELAY) == HAL_OK)
        {
            // Get ADC value
            adc_value = HAL_ADC_GetValue(&hadc1);

            // Convert ADC value to voltage (assuming 3.3V reference and 12-bit ADC)
            cp_voltage = (adc_value * 3.3) / 4095.0;

            // Interpret CP voltage based on ISO 15118 standard
            if (cp_voltage >= 3.0)
            {
                // EV Disconnected (12V scaled to 3.3V)
                // Handle this state
            }
            else if (cp_voltage >= 2.0)
            {
                // EV Detected (9V scaled to ~2.5V)
                // Handle this state
            }
            else if (cp_voltage >= 1.5)
            {
                // EV Ready to Charge (6V scaled to ~1.65V)
                // Handle this state
            }
            else if (cp_voltage >= 0.8)
            {
                // Charging in Progress (3V scaled to ~0.83V)
                // Handle this state
            }
            else
            {
                // Fault or other unknown state
                // Handle this state
            }
        }

        // Small delay for next ADC reading
        HAL_Delay(100);
    }
}

// ADC1 Initialization function
static void MX_ADC1_Init(void)
{
    ADC_ChannelConfTypeDef sConfig = {0};

    // Configure the global features of the ADC
    hadc1.Instance = ADC1;
    hadc1.Init.ScanConvMode = ADC_SCAN_DISABLE;
    hadc1.Init.ContinuousConvMode = DISABLE;
    hadc1.Init.DiscontinuousConvMode = DISABLE;
    hadc1.Init.ExternalTrigConv = ADC_SOFTWARE_START;
    hadc1.Init.DataAlign = ADC_DATAALIGN_RIGHT;
    hadc1.Init.NbrOfConversion = 1;
    HAL_ADC_Init(&hadc1);

    // Configure the ADC channel (e.g., Channel 0 = PA0)
    sConfig.Channel = ADC_CHANNEL_0;
    sConfig.Rank = 1;
    sConfig.SamplingTime = ADC_SAMPLETIME_3CYCLES;
    HAL_ADC_ConfigChannel(&hadc1, &sConfig);
}

